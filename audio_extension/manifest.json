{
  "manifest_version": 3,
  "name": "Audio Catcher",
  "version": "1.0",
  "description": "Captures audio from a tab.",
  "permissions": [
    "tabCapture",
    "activeTab",
    "offscreen",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}